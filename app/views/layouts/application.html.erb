<!DOCTYPE html>
<html>
  <head>
    <title>DiscMania</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" >

  </head>


  <body>
    <header class="header">
            <div class="mainimg">
              <%= image_tag "DISC_MANIA.png",size: "160x70" ,:class => "logo-img"%>
            </div>


          <!-- 検索窓をつける -->
          <div class="kensaku">
            <%= search_form_for @search, url: search_records_path do |f| %>
            <%= f.search_field :name_cont, placeholder: '商品レコード名' %>
            <%= f.search_field :artist_name_cont, placeholder: 'アーティスト名' %>
            <%= f.submit %>
            <% end %>
          </div>

          <ol class="breadcrumb breadcrumb-nav">
                  <% if admin_signed_in? %>
                    <!-- アドミンがログインの場合 -->
                    <li class="header-text"><%=link_to  "受注一覧", admin_orders_path %></li>
                    <li class="header-text"><%= link_to "商品登録", new_admin_record_path %></li>
                    <li class="header-text"><%= link_to "商品一覧", admin_records_path %></li>
                    <li class="header-text"><%= link_to "ユーザ一覧", admin_users_path %></li>
                    <!-- いつか消します -->
                    <li class="header-text"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>

                  <% else %>
                      <% if user_signed_in? %>
                      <!--ユーザがログインしてる -->
                          <li class="user-icon">
                          <%= link_to "", user_path(current_user.id), class: "fas fa-user-circle" %></li>
                          <li  class="header-text"><%= link_to "商品一覧", records_path %></li>
                          <li  class="header-text"><%= link_to "カート", cart_items_path %></li>
                          <li  class="header-text"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>

                      <% else %>
                      <!--  ユーザがログインしてない -->
                          <li  class="header-text"><%= link_to "商品一覧", records_path  %></li>
                          <li  class="header-text"><%= link_to "ログイン", new_user_session_path %></li>
                          <li  class="header-text"><%= link_to "会員登録", new_user_registration_path %></li>
                      <% end %>
                  <% end %>
          </ol>
    </header>

                <%= yield %>


    <footer class="footer style-2">
      <div class="container">
        <div class="row">
          <div class="col-md-8"></div>
          <div class="col-md-4">
            <div class="footer-box">
            <p class="footer-main">DiscMania</p>
            <p class="footer-text">〒380-****　長野県△△市○○町×××-××</p>
            <p class="footer-text">TEL:026 - ○○○○ - ○○○○</p>
            </div>
          </div>
        </div>
       </div>
    </footer>
  </body>
</html>

