            <nav class='nav navbar-nav navbar-left' >
              <%=image_tag 'DISC_MANIA.png',size: '150x100'%>
            </nav>

            <nav>
              <ul class="nav navbar-nav navbar-right" >
              <% if admin_signed_in? %>
