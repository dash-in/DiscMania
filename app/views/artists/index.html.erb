<div class="container">
    <section class="row">
        <h1 class="col-xs-12 text-center">アーティスト一覧管理</h1>
        <div class="col-xs-12">
            <div class="row">
                <%= search_form_for(@q, url: artists_path, html: { method: :get, class: 'form-horizontal', role: 'form' }) do |f| %>
                    <label class="col-xs-6 col-xs-offset-6">
                        <div class="col-xs-5 artist-search">
                            <%= f.text_field :id_eq, class: 'form-control', placeholder: "アーティストID" %>
                        </div>
                        <div class="col-xs-5 artist-search">
                            <%= f.text_field :name_cont, class: 'form-control', placeholder: "アーティスト名" %>
                        </div>
                        <div class="col-xs-2 artist-search">
                        <%= f.submit "検索", class: 'btn btn-default' %>
                    </label>
                <% end %>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="col-xs-10 col-xs-offset-1 artist-ind-table">
                
                <div class="col-xs-12">
                    <table class="table artist-table">
                        <thead>
                            <tr>
                                <th class="col col-xs-1 text-center table-h">ID</th>
                                <th class="col col-xs-3 text-center table-h">アーティスト名</th>
                                <th class="col col-xs-6 text-center table-h">アーティスト概要</th>
                                <th class="col col-xs-2 text-center table-h"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @artists.each do |artist| %>
                                <tr>
                                    <td class="artist-table a-t-id"><%= artist.id %></td>
                                    <td class="artist-table"><%= link_to artist.name, artist_path(artist.id), {:style => ":hover {color: blue; background:white;}"} %></td>
                                    <td class="artist-table"><%= artist.description.truncate(25) %></td>
                                    <td class="artist-table">
                                        <%= link_to "編集", edit_artist_path(artist.id), class:"btn btn-success btn-sm" %>
                                        <%= link_to "削除", artist_path(artist.id), class:"btn btn-info btn-sm", method: :delete %>
                                    </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-xs-1"></div>
        </div>
        
        <div class="col-xs-12 text-center">
            <%= link_to "新規登録", new_artist_path, class:"btn btn-danger btn-lg artist-show-btn" %>
        </div>
    </section>
</div>