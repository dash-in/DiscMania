<% content_for(:title) do %>
  商品検索
<% end %>

<%= search_form_for(@q, url: search_admin_records_path, html: { method: :get, class: 'form-horizontal', role: 'form' }) do |f| %>
  <%= render 'search_form', f: f %>
<% end %>

<% @records.each do |record| %>
  <div class="col-xs-3 disc-space">
    <% if record.stock == 0 %>
      <div class="stock-f"><p>入荷待ち</p></div>
    <% else %>
      <div class="stock-t"><p>即日発送</p></div>
    <% end %>
    <%= link_to admin_record_path(record.id), target: "_blank" do %>
      <%= attachment_image_tag record, :image, :fill, 200, 200, fallback: "no_image.jpg", size:'200x200', class:'text-center record-image' %></br>
    <% end %>
    <h4><b><%= record.name %></b></h4>
    <p><%= record.artist.name %></p>
    <p>¥ <%= (record.price * @setting.tax).floor %>（税込）</p>
  </div>
<% end %>
