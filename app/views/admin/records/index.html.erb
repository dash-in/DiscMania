    <h2 class="text-center"><b>ジャンル別少在庫TOP4</b></h1>

    <section class="col-xs-12 records-genre">
      <h3 class="rec-ind-title"><b>Japanese Rock / Pops / Indies</b></h3>
      <div class="col-xs-12">
        <% @jpops.each do |record| %>
          <% record_img = RecordImg.find_by(record_id: record.id, order: 1) %>
          <div class="col-xs-3 disc-space">
            <%= link_to admin_record_path(record.id) do %>
              <%= attachment_image_tag record_img, :image, format: 'jpeg', size: "200×200", fallback: "/images/no-image-icon-0.jpg", size:'200x200' %>
            <% end %>
            <%= link_to admin_record_path(record.id) do %>
              <h4><b><%= record.name %></b></h4>
            <% end %>
            <p><%= record.artist.name %>　<%= link_to "編集", edit_admin_record_path(record.id), class:"btn btn-primary btn-sm" %></p>
            <p>¥ <%= record.price.floor %>（税込）</p>
            <%= form_for record, url: admin_record_path(record) do |f| %>
              <b class="col-xs-12">在庫数</b>
              <div class="col-xs-8 man-form">
                  <%= f.number_field :stock, class:"form-control" %>
              </div>
              <div class="col-xs-4 man-form">
                <%= f.submit "更新", class:"btn btn-success" %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <%= link_to "もっと見る", search_admin_records_path, class:"col-xs-12 text-right link h4" %>
    </section>
    
