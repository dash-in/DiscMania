<div class="container">
    <section class="row">
    <h1 class="text-center">受注管理フォーム</h1>
    <div class="col-xs-12">
        <table class="table">
            <thead>
                <tr>
                    <th class="col"></th>
                    <th class="col">受注ID</th>
                    <th class="col">購入年月日</th>
                    <th class="col">注文者名</th>
                    <th class="col">受注金額</th>
                    <th class="col">入金ステータス</th>
                    <th class="col">発送ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @orders.each do |order| %>
                    <tr>
                        <td><%= link_to "詳細", admin_order_path(order.id), class:"btn btn-success" %></td>
                        <td><%= order.id %></td>
                        <td><%= simple_date(order.created_at) %></td>
                        <td><%= order.user.last_name %> <%= order.user.first_name %></td>
                        <td><%= order.total_price %></td>
                        <td><%= order.receipt_status %></td>
                        <td><%= order.shipping_status %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    </section>
</div>