<div class="container">
    <section class="row">
        <h1>配送先編集</h1>

        <div class="artist-show">
                <h4 class="col-xs-2">ID：<%= @shipping.user_id %></h4>
                <h4 class="col-xs-5 text-right">作成日時：<%= @shipping.created_at %></h4>
                <div class="col-xs-5"></div>

            <%= form_for @shipping do |f| %>

                <h3 class="col-xs-12">宛名</h3>
                <%= f.text_field :name, class:"col-xs-6 col-xs-offset-1 h4 artist-show-space" %>
                <div class="col-xs-5"></div>

                <h3 class="col-xs-12">郵便番号</h3>
                <%= f.text_field :post_number, class:"col-xs-10 col-xs-offset-1 h4 artist-show-space" %>
                <div class="col-xs-1"></div>

                <h3 class="col-xs-12">住所</h3>
                <%= f.text_field :address, class:"col-xs-10 col-xs-offset-1 h4 artist-show-space" %>
                <div class="col-xs-1"></div>

                <div class="col-xs-12 text-center">
                    <%= f.submit "変更を保存する", class:"btn btn-danger btn-lg artist-show-btn" %>
                    <%= link_to "宛先を削除する", shipping_info_path, class:"btn btn-info btn-lg artist-show-btn", method: :delete %>
                </div>
            <% end %>
        </div>
    </section>
</div>