<body>
<section class="slice slice-lg sct-color-1">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">

                <div class="form-user style-1 rounded has-shadow-1">
                    <div class="form-header">
                        <h3 class="form-header-title text-center" >パスワードをお忘れですか</h3>
                    </div>
                        <div class="form-body">
                        <div class="row">
                        <div class="col-xs-12">
                        	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                        	<%= render "devise/shared/error_messages", resource: resource %>

                        	<div class="form-group has-icon">
                            	<label class="control-label sr-only" for="inputfmail">メールアドレス</label>
                             	<%= f.email_field :email, autofocus: true, class:"form-control", id:"inputemail", placeholder:"メールアドレス"%></div>
                         	<%= f.submit "パスワードのリセット手順を送ってください", class:"btn btn-block btn-primary" %>
							<% end %>
                    	</div>
                    	</div>
                  		</div>
                </div>
            </div>
        </div>
    </div>
</section>
</body>
