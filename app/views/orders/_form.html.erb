<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.number_field :user_id %>
  </div>

  <div class="field">
    <%= form.label :shipping_info_id %>
    <%= form.number_field :shipping_info_id %>
  </div>

  <div class="field">
    <%= form.label :payment_method %>
    <%= form.text_field :payment_method %>
  </div>

  <div class="field">
    <%= form.label :actual_shipping %>
    <%= form.number_field :actual_shipping %>
  </div>

  <div class="field">
    <%= form.label :actual_tax %>
    <%= form.text_field :actual_tax %>
  </div>

  <div class="field">
    <%= form.label :total_price %>
    <%= form.number_field :total_price %>
  </div>

  <div class="field">
    <%= form.label :receipt_status %>
    <%= form.number_field :receipt_status %>
  </div>

  <div class="field">
    <%= form.label :shipping_status%>
    <%= form.select :shipping_status,[["発送準備中","undelivery"],["配送中","delivery"],["配送済み","delivered"]]%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
